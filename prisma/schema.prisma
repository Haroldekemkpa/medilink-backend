datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}


//----------------------------- ENUMS -------------------

enum Role {
  PATIENT
  DOCTOR
  ADMIN
}

enum UserGender {
  MALE
  FEMALE
  PREFER_NOT_TO_SAY
}

enum AppointmentStatus {
  SCHEDULED
  COMPLETED
  CANCELED
  NO_SHOW
  IN_PROGRESS
}

enum DoctorsVerificationStatus {
  PENDING
  APPROVED
  REJECTED
  SUSPENDED
}

//------------------ CORE USER ----------------

model Users {
  id             String          @id @default(cuid())
  firstName      String
  lastName       String
  email          String          @unique
  dateOfBirth    DateTime
  gender         UserGender?
  password       String
  role           Role            @default(PATIENT)
  avatarUrl      String?
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt

  // Relations
  patientProfile Patient?
  doctorProfile  Doctor?
  adminProfile   Admin?
  kyc            Kyc?
  appointments   Appointment[]
  payments       Payments[]
  userConsent    UserConsent?
}

//-------------- PROFILES ---------------------------

model Patient {
  id        Int    @id @default(autoincrement())
  userId    String @unique
  user      Users  @relation(fields: [userId], references: [id])
  age       Int?
  gender    String?
  bloodType String?
}

model UserConsent {
  id             String   @id @default(cuid())
  userId         String   @unique
  user           Users    @relation(fields: [userId], references: [id], onDelete: Cascade)
  tandC          Boolean  @default(false)
  privacy        Boolean  @default(false)
  marketingOptin Boolean  @default(false)
  telemedConsent Boolean  @default(false)
  acceptedAt     DateTime @default(now())

  @@map("user_consents")
}

model Doctor {
  id                String   @id @default(cuid())
  userId            String   @unique
  user              Users    @relation(fields: [userId], references: [id])
  firstName         String
  lastName          String
  title             String
  email             String   @unique
  phone             String
  password          String
  specialization    String
  licenceNumber     String   @unique
  yearsOfExp        Int?
  hospital          String?
  avatarUrl         String?
  verificationStatus DoctorsVerificationStatus @default(PENDING)
}

//---------------- OTHER MODELS ----------------

model Admin {
  id        String  @id @default(cuid())
  userId    String  @unique
  user      Users   @relation(fields: [userId], references: [id])
  position  String?
}

model Kyc {
  id        String  @id @default(cuid())
  userId    String  @unique
  user      Users   @relation(fields: [userId], references: [id])
  documentType String?
  documentUrl  String?
  verified     Boolean @default(false)
}

model Appointment {
  id         String            @id @default(cuid())
  userId     String
  user       Users             @relation(fields: [userId], references: [id])
  date       DateTime
  status     AppointmentStatus @default(SCHEDULED)
}

model Payments {
  id         String    @id @default(cuid())
  userId     String
  user       Users     @relation(fields: [userId], references: [id])
  amount     Float
  createdAt  DateTime  @default(now())
}
