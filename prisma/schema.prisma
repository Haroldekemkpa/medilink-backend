generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

//----------------------------- ENUM-------------------

enum Role{
  PATIENT
  DOCTOR
  ADMIN
}

enum UserGender {
  MALE
  FEMALE
  PREFER_NOT_TO_SAY
}

enum AppointmentStatus{
  SCHEDULED
  COMPLETED
  CANCELED
  NO_SHOW
  IN_PROGRESS
}

enum DoctorsVerificationStatus {
  PENDING
  APPROVED
  REJECTED
  SUSPENDED
}


//------------------CREATE CORE USER----------------

model Users {
  id          String       @id @default(cuid())
  firstName   String
  lastName    String
  email       String    @unique
  dateOfBirth DateTime
  gender      UserGender?
  password    String
  role        Role      @default(PATIENT)
  avatarUrl   String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  //Relations
  patientProfile  patient?
  doctorProfile   Doctor?
  adminProfile    Admin?
  kyc             Kyc?
  appointments    Appointment[]
  payments        Payments[]
  userConsent     userConsent?
}


//--------------PROFILES---------------------------

model Patient {
  id        Int   @id @default(autoincrement())
  user      user  @relatiion(fields: [userId], references: [id])
  userId    Int   @unique
  age       Int?
  gender    String?
  bloodType String?

}

model UserConsent {
  id             String      @id default(cuid())
  userId         String      @unique
  user           Users       @relation(fields: [userId], reference: [id], onDelete: Cascade)
  tandC          Boolean     @default(false)
  privacy        Boolean     @default(false)
  marketingOptin Boolean     @default(false)
  telemedConsent Boolean     @default(false)

  acceptedAt DateTime @default(now())

  @@map("user_consents")
}

model Doctor {
  id                Int       @id @default(cuid())
  firstName         String
  lastName          String
  title             String
  email             String    @unique
  phone             String
  password          String
  specialization    String
  licenceNumber     String    @unique
  yearsOfExp        Int?
  hospital          string?
  avatarUrl         String?
}

model DoctorProfile {
  id   
}